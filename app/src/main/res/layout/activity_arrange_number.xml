<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mickeymouse"
    tools:context=".arrangeNumber">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Arrange the numbers in ascending order:"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:translationY="100dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17.5sp"
        android:layout_marginEnd="17.5sp"
        android:orientation="horizontal"
        android:translationY="170sp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17.5sp"
        android:layout_marginEnd="17.5sp"
        android:orientation="horizontal"
        android:translationY="330dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button4"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button5"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="218dp"
        android:layout_marginEnd="54dp"
        android:text="Exit"
        android:translationY="450dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="200dp"
        android:text="Submit"
        android:translationY="450dp" />

</RelativeLayout>